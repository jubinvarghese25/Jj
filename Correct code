#include <stdio.h>
#include <limits.h>
#include <string.h>

struct process {
    int pid, at, bt, rt, pr, ct, wt;
};

int n;

/* ---------- FCFS ---------- */
float fcfs(struct process p[]) {
    int time = 0;
    float avg = 0;

    // sort by arrival time
    for(int i=0;i<n-1;i++)
        for(int j=i+1;j<n;j++)
            if(p[i].at > p[j].at) {
                struct process t = p[i];
                p[i] = p[j];
                p[j] = t;
            }

    for(int i=0;i<n;i++) {
        if(time < p[i].at)
            time = p[i].at;
        p[i].wt = time - p[i].at;
        time += p[i].bt;
        avg += p[i].wt;
    }
    return avg / n;
}

/* ---------- SRTF ---------- */
float srtf(struct process p[]) {
    int time = 0, completed = 0;
    float avg = 0;

    for(int i=0;i<n;i++)
        p[i].rt = p[i].bt;

    while(completed < n) {
        int idx = -1, minrt = INT_MAX;

        for(int i=0;i<n;i++) {
            if(p[i].at <= time && p[i].rt > 0 && p[i].rt < minrt) {
                minrt = p[i].rt;
                idx = i;
            }
        }

        if(idx == -1) {
            time++;
            continue;
        }

        p[idx].rt--;
        time++;

        if(p[idx].rt == 0) {
            completed++;
            p[idx].ct = time;
            p[idx].wt = p[idx].ct - p[idx].at - p[idx].bt;
            avg += p[idx].wt;
        }
    }
    return avg / n;
}

/* ---------- PRIORITY NON-PREEMPTIVE (NO LOOP POSSIBLE) ---------- */
float priority_np(struct process p[]) {
    int completed = 0;
    float avg = 0;
    int done[10] = {0};

    int time = INT_MAX;
    for(int i=0;i<n;i++)
        if(p[i].at < time)
            time = p[i].at;

    while(completed < n) {
        int idx = -1;
        int maxp = INT_MIN;
        int next_at = INT_MAX;

        for(int i=0;i<n;i++) {
            if(!done[i]) {
                if(p[i].at <= time && p[i].pr > maxp) {
                    maxp = p[i].pr;
                    idx = i;
                }
                if(p[i].at < next_at)
                    next_at = p[i].at;
            }
        }

        // CPU idle â†’ jump to next arrival
        if(idx == -1) {
            time = next_at;
            continue;
        }

        p[idx].wt = time - p[idx].at;
        time += p[idx].bt;
        avg += p[idx].wt;
        done[idx] = 1;
        completed++;
    }
    return avg / n;
}

/* ---------- ROUND ROBIN ---------- */
float rr(struct process p[]) {
    int tq = 3, time = 0, completed = 0;
    float avg = 0;

    for(int i=0;i<n;i++)
        p[i].rt = p[i].bt;

    while(completed < n) {
        int executed = 0;

        for(int i=0;i<n;i++) {
            if(p[i].rt > 0 && p[i].at <= time) {
                executed = 1;
                int exec = (p[i].rt > tq) ? tq : p[i].rt;
                p[i].rt -= exec;
                time += exec;

                if(p[i].rt == 0) {
                    completed++;
                    p[i].ct = time;
                    p[i].wt = p[i].ct - p[i].at - p[i].bt;
                    avg += p[i].wt;
                }
            }
        }

        if(!executed)
            time++;
    }
    return avg / n;
}

/* ---------- MAIN ---------- */
int main() {
    struct process p[10], temp[10];
    float a1, a2, a3, a4;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for(int i=0;i<n;i++) {
        p[i].pid = i + 1;
        printf("P%d Arrival Burst Priority: ", i+1);
        scanf("%d %d %d", &p[i].at, &p[i].bt, &p[i].pr);
    }

    memcpy(temp, p, sizeof(p));
    a1 = fcfs(temp);

    memcpy(temp, p, sizeof(p));
    a2 = srtf(temp);

    memcpy(temp, p, sizeof(p));
    a3 = priority_np(temp);

    memcpy(temp, p, sizeof(p));
    a4 = rr(temp);

    printf("\nAverage Waiting Times:");
    printf("\nFCFS = %.2f", a1);
    printf("\nSRTF = %.2f", a2);
    printf("\nPriority = %.2f", a3);
    printf("\nRound Robin = %.2f", a4);

    float min = a1;
    if(a2 < min) min = a2;
    if(a3 < min) min = a3;
    if(a4 < min) min = a4;

    printf("\n\nMinimum Average Waiting Time = %.2f\n", min);
    return 0;
}
